<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601} %-5p [%-10t] %-25c - %m%n</pattern>
        </encoder>
    </appender>
    <logger name="io.github.nmusatti.rpglepreprocessor" level="INFO" />
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
